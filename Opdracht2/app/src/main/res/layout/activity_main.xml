<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20sp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/Hint1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="@string/hint1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        
        <TextView
            android:id="@+id/Team1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/team1"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/buttonplus1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/plustext"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonmin1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/mintext"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Team2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/team2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonplus2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/plustext"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonmin2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/mintext"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="@string/scoreboard"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <TextView
        android:id="@+id/countertext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="0"
        android:textSize="60sp"/>

        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text=" - "
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/countertext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="0"
            android:textSize="60sp"/>

    </LinearLayout>
    
    





</LinearLayout>